<section
  style="
    background-image: url({{ section.settings.hero_image | image_url }});
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    min-height: {{ section.settings.hero_height }}px;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
  "
  class="hero-wrap text-white"
>
  <div class="container">
    <p class="breadcrumbs mb-2">
      <a href="/" class="text-white">{{ section.settings.hero_breadcrumb }}</a>
      <span class="text-white"> / {{ section.settings.hero_title }}</span>
    </p>
    <h1 class="display-4">{{ section.settings.hero_title }}</h1>
  </div>
</section>

<section class="ftco-section ftco-no-pb ftco-no-pt bg-light py-5">
  <div class="container">
    <div class="row d-flex flex-lg-row flex-column-reverse align-items-center">
      <div
        class="col-lg-5 mb-4 mb-lg-0 p-lg-5 img img-2 d-flex justify-content-center align-items-center"
        style="background-image: url('{{ section.settings.about_image | image_url }}'); min-height: 300px; background-size: cover; background-position: center;"
      >
        {% comment %}
        <a href="{{ section.settings.video_url }}" class="icon popup-vimeo d-flex justify-content-center align-items-center">
          <span class="icon ion-md-play"></span>
        </a>
        {% endcomment %}
      </div>

      <div class="col-lg-7 py-4 wrap-about pb-lg-5 ftco-animate text-center text-lg-left">
        <div class="heading-section-bold mb-4">
          <h2 class="mb-4">{{ section.settings.heading }}</h2>
        </div>
        <div>
          {% assign content = section.settings.about_content %}
          {{ content | replace: '<a href=', '<a class="btn btn-primary mt-3" href=' }}
        </div>
      </div>
    </div>
  </div>
</section>









{% schema %}
{
  "name": "About Us",
  "tag": "section",
  "class": "about-us-section",
  "settings": [
    {
      "type": "image_picker",
      "id": "hero_image",
      "label": "Hero Background Image"
    },
    {
      "type": "text",
      "id": "hero_title",
      "label": "Hero Title",
      "default": "About Us"
    },
    {
      "type": "text",
      "id": "hero_breadcrumb",
      "label": "Breadcrumb Label",
      "default": "Home"
    },
    {
      "type": "image_picker",
      "id": "about_image",
      "label": "About Image"
    },
    {
      "type": "url",
      "id": "video_url",
      "label": "Video URL"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Welcome to Vegefoods an eCommerce website"
    },
    {
      "type": "richtext",
      "id": "about_content",
      "label": "About Content",
      "default": "<p>Far far away, behind the word mountains...</p><p>Separated they live in Bookmarksgrove...</p><p><a href='#'>Shop now</a></p>"
    },
    {
      "type": "range",
      "id": "hero_height",
      "label": "Hero Section Height (px)",
      "min": 300,
      "max": 900,
      "step": 50,
      "default": 500
    }
    // You can continue adding more counter settings here...
  ],
  
  "presets": [
    {
      "name": "About Us Page",
      
    }
  ]
}
{% endschema %}

