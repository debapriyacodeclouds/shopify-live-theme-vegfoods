<section class="ftco-section img" style="background-image: url({{ section.settings.background_image | img_url: 'original' }}); background-size: cover; background-position: center;">
  <div class="container">
    <div class="row justify-content-end">
      <div class="col-md-6 col-12 heading-section ftco-animate deal-of-the-day text-md-left text-center px-3 py-5 mobile-bg">
        <span class="subheading">{{ section.settings.subheading }}</span>
        <h2 class="mb-4">{{ section.settings.heading }}</h2>
        <p>{{ section.settings.description }}</p>
        <h3><a href="{{ section.settings.product_link }}">{{ section.settings.product_name }}</a></h3>
        <span class="price">{{ section.settings.old_price }} <a href="{{ section.settings.product_link }}">now {{ section.settings.new_price }} only</a></span>
        <div id="timer" class="d-flex mt-5 justify-content-center justify-content-md-start w-100">
          <div class="time text-center px-2" id="days"></div>
          <div class="time text-center px-2" id="hours"></div>
          <div class="time text-center px-2" id="minutes"></div>
          <div class="time text-center px-2" id="seconds"></div>
        </div>
      </div>
    </div>       
  </div>
</section>


{% schema %}
{
  "name": "Deal of the Day Section",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Best Price For You"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Main Heading",
      "default": "Deal of the day"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Far far away, behind the word mountains, far from the countries Vokalia and Consonantia"
    },
    {
      "type": "text",
      "id": "product_name",
      "label": "Product Name",
      "default": "Spinach"
    },
    {
      "type": "url",
      "id": "product_link",
      "label": "Product Link"
    },
    {
      "type": "text",
      "id": "old_price",
      "label": "Old Price",
      "default": "$10"
    },
    {
      "type": "text",
      "id": "new_price",
      "label": "New Price",
      "default": "$5"
    }
  ],
  "presets": [
    {
      "name": "Deal of the Day"
    }
  ]
}
{% endschema %}
